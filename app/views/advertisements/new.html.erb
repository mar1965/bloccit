<h1>New Advertisement</h1>
<div class="row">
   <div class="col-md-4">
     <p>Guidelines for ads</p>
     <ul>
       <li>Enter your advertisement's title and copy.</li>
       <li>Set your price, per the Bloc Words policy.</li>
       <li>You pay only when someone clicks on your ad.</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for @advertisement do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter ad title" %>
       </div>
       <div class="form-group">
         <%= f.label :copy %>
         <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter ad copy" %>
       </div>
       <div class="form-group">
         <%= f.label :price %>
         <%= f.text_field :price, class: 'form-control', placeholder: "Set your budget." %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
